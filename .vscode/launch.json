{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "preLaunchTask": "npm: compile", // Change to "npm: compile"
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "runtimeExecutable": "${execPath}"
        }
    ]
}